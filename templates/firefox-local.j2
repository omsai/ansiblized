# -*- mode: apparmor -*-

# {{ ansible_managed }}

# From https://support.mozilla.org/en-US/kb/linux-security-warning

# This profile allows everything and only exists to give the application a name
# instead of having the label "unconfined"
abi <abi/4.0>,
include <tunables/global>
profile firefox-local
{{ ansible_user_dir }}/.local/share/tor-browser/Browser/{firefox,firefox.real,updater,start-tor-browser}
flags=(unconfined) {
	userns,
	# Site-specific additions and overrides. See local/README for details.
	include if exists <local/firefox>
}
